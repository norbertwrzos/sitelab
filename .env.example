# ===========================================
# SiteLab Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# Database (PostgreSQL)
# Use Supabase, Neon, Railway, or local PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/sitelab?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Email Service (Resend)
# Get your API key at https://resend.com
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="SiteLab <hello@sitelab.com>"
ADMIN_EMAIL="admin@sitelab.com"

# hCaptcha (Spam Protection)
# Get keys at https://www.hcaptcha.com
NEXT_PUBLIC_HCAPTCHA_SITE_KEY="10000000-ffff-ffff-ffff-000000000001"
HCAPTCHA_SECRET_KEY="0x0000000000000000000000000000000000000000"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="SiteLab"

# Optional: Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Optional: Error Tracking (Sentry)
# SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"
